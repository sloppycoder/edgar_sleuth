{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S %z"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": [
            "console"
        ]
    },
    "loggers": {
        "edgar_sleuth": {
            "level": "DEBUG"
        },
        "edgar": {
            "level": "DEBUG"
        },
        "splitter": {
            "level": "DEBUG"
        },
        "llm": {
            "level": "DEBUG"
        },
        "datastore": {
            "level": "INFO"
        }
    }
}
